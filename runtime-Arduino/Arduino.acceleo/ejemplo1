
//Actuadores
int pinLed3= 3;
int pinLed0= 0;
int pinLed2= 2;

//Sensores
int ApinLDR1 = 1;
int medLDR1 = 0;

//Instrucciones
int pwmLed3=0;
int pwmLed0=0;
int pwmLed2=0;


void setup(){
pinMode(pinLed3, OUTPUT);

pinMode(pinLed0, OUTPUT);

pinMode(pinLed2, OUTPUT);

}

void loop(){

medLDR1 = analogRead(ApinLDR1);
pwmLed3 = medLDR1/4;
analogWrite(pinLed3, pwmLed302);		
pwmLed0 = medLDR1/4;
analogWrite(pinLed0, pwmLed302);		
pwmLed2 = medLDR1/4;
analogWrite(pinLed2, pwmLed302);		

}

